<%= semantic_form_for @listing do |f| %>
	<%= f.semantic_errors :state %>
	<%= f.inputs do %>
	

		<%= f.input :bedroom,  class: 'form-control'%>


		<%= f.input :accomodates %>


		<%= f.input :location %>


		<%= f.input :price_per_night %>

		<%= f.semantic_fields_for :reservations do |reservation| %>

			<%= render 'reservation_fields', :f => reservation %>

		<% end %>

	
		<%= f.actions %>
	<% end %>
<% end %>


